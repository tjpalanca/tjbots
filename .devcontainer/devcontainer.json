{
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "features": {
        "ghcr.io/va-h/devcontainers-features/uv:1": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "mounts": [
        {
            "source": "devcontainer-uv-cache",
            "target": "/home/vscode/.cache/uv",
            "type": "volume"
        }
    ],
    "containerUser": "vscode",
    "containerEnv": {
        // {uv} settings
        "UV_SYSTEM_PYTHON": "1",
        "UV_LINK_MODE": "copy",
        "UV_PROJECT_ENVIRONMENT": "/home/vscode/.local/share/virtualenvs/uv"
    },
    "postCreateCommand": "sudo chown vscode:vscode ~/.cache && uv sync --locked --no-install-project",
    "customizations": {
        "vscode": {
            "extensions": [
                "Posit.shiny",
                "ms-toolsai.jupyter",
                "GitHub.vscode-pull-request-github",
                "quarto.quarto",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "files.enableTrash": false,
                "python.interpreters.override": [
                    "/home/vscode/.local/share/virtualenvs/uv/bin/python"
                ],
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    }
}